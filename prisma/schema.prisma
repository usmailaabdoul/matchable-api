generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SessionType {
  PADEL
  FITNESS
  TENNIS
}

model Trainer {
  id        String    @id @default(cuid())
  name      String
  specialty String
  sessions  Session[]
}

model Session {
  id          String    @id @default(cuid())
  type        SessionType
  duration    Int       // in minutes
  price       Float
  startTime   DateTime
  trainer     Trainer   @relation(fields: [trainerId], references: [id])
  trainerId   String
  isBooked    Boolean   @default(false)


  Booking Booking[]
}

model Booking {
  id         String    @id @default(cuid())
  clientName String
  email      String
  phone      String
  sessions   Session[]
  totalCost  Float
  createdAt  DateTime  @default(now())
}