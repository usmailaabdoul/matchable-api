generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SessionType {
  PADEL
  FITNESS
  TENNIS
}

// schema.prisma
model Session {
  id          String   @id @default(uuid())
  type        SessionType
  startTime   DateTime
  endTime     DateTime
  trainer     String
  price       Decimal
  capacity    Int
  bookings    Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  sessions  Session[]
  userName  String
  email     String
  phone     String
  createdAt DateTime @default(now())
}